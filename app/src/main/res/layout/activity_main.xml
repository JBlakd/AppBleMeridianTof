<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <!--  BLE availability text indicator  -->
    <TextView
        android:id="@+id/textViewAvailabilityBle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <ImageView
        android:id="@+id/imageViewBle"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/buttonOnBle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn On"/>

    <Button
        android:id="@+id/buttonOffBle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Off"/>

    <Button
        android:id="@+id/buttonDiscoverableBle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Phone Discoverable"/>

    <Button
        android:id="@+id/buttonGetPairedBle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Paired Devices"/>

    <!--  BLE paired devices text indicator  -->
    <TextView
        android:id="@+id/textViewPairedBle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
</LinearLayout>